'use strict';

goog.provide('Blockly.Blocks.discovery');

goog.require('Blockly.Blocks');

//TODO: add tooltips and url

// Wait block
Blockly.Blocks['discovery_wait'] = {
  init: function() {
    this.setHelpUrl('http://www.example.com/');
    this.setColour(120);
    this.appendValueInput("TIME")
        .setCheck("Number")
        .appendField("Wait for");
    this.setPreviousStatement(true);
    this.setNextStatement(true);
    this.setTooltip('');
  }
};

// Movement blocks
Blockly.Blocks['discovery_forward'] = {
  init: function() {
    this.setHelpUrl('http://www.example.com/');
    this.setColour(20);
    this.appendDummyInput()
        .appendField("Move Forward");
    this.setPreviousStatement(true);
    this.setNextStatement(true);
    this.setTooltip('');
  }
};

